<AuthorizeView>
    <Authorized>
        <li class="nav">
            <a class="nav-link text-light" href="Identity/Account/Manage">Hello, @context.User.Identity.Name!</a>
            <form method="post" action="Identity/Account/LogOut">
                <button type="submit" class="btn btn-info"><i class="fas fa-sign-out-alt"></i> Log out</button>
            </form>
        </li>
</Authorized>

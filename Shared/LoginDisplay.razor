        <li class="nav">
            <a class="btn btn-info btn-default" href="Identity/Account/Register"><i class="fas fa-user"></i> Register</a>
        </li>
        <li class="nav">
            &nbsp;<a class="nav-link text-light" href="Identity/Account/Login">Log in</a>
        </li>
    </NotAuthorized>
</AuthorizeView>
